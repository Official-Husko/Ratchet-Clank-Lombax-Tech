<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ===== OmniWrench 8000 ===== -->
    <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
        <defName>RC_OmniWrench_8K</defName>
        <label>OmniWrench 8000</label>
        <description>The OmniWrench 8000 is an easy to produce Tool developed by the Lombax.</description>
        <graphicData>
            <texPath>Things/Weapons/RC_OmniWrench_8000</texPath>
            <graphicClass>Graphic_Single</graphicClass>           
        </graphicData>        
        <techLevel>Industrial</techLevel>
        <statBases>
            <WorkToMake>8000</WorkToMake>
            <Mass>1.0</Mass>
        </statBases>
        <equippedStatOffsets>
            <ConstructionSpeed>0.15</ConstructionSpeed>
        </equippedStatOffsets>
        <equippedAngleOffset>-45</equippedAngleOffset>
        <costList>
            <Steel>75</Steel>
            <Chemfuel>25</Chemfuel>
        </costList>
        <weaponTags>
            <li>LombaxTools</li>
        </weaponTags>
        <tools>
            <li>
                <label>Handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.6</cooldownTime>
            </li>
            <li>
                <label>Blade</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>12</power>
                <armorPenetration>0.45</armorPenetration>
                <cooldownTime>1.4</cooldownTime>
            </li>
            <li>
                <label>Head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>1.4</cooldownTime>
            </li>
            <li>
                <label>Point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.4</cooldownTime>
            </li>
        </tools>
        <recipeMaker>
            <recipeUsers>
                <li>FueledSmithy</li>
                <li>ElectricSmithy</li>
            </recipeUsers>
            <researchPrerequisite>RC_Armory</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
        </recipeMaker>
        <comps>
			<li>
			    <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
			</li>
		</comps>
    </ThingDef>

